<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	version="1.0">
	<persistence-unit name="CAPDS">
		<jta-data-source>java:jboss/xa-datasources/CAPDS</jta-data-source>
		<properties>
			<property name="showSql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
	<persistence-unit name="CAPAccess">
		<jta-data-source>java:jboss/xa-datasources/CAPAccess</jta-data-source>
		<properties>
			<property name="showSql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
	</persistence-unit>
</persistence>

 
